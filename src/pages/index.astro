---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Timeline from '../components/Timeline.astro';
import Skills from '../components/Skills.astro';
import Community from '../components/Community.astro';
import Projects from '../components/Projects.astro';
import Footer from '../components/Footer.astro';
import { loadProfile } from '../utils/profile';

const profile = loadProfile();
---

<BaseLayout title={`${profile.name} | ${profile.tagline}`} description={profile.summary}>
  <Header name={profile.name} />

  <main>
    <Hero
      name={profile.name}
      tagline={profile.tagline}
      location={profile.location}
      summary={profile.summary}
      email={profile.email}
      linkedin={profile.linkedin}
    />

    <Timeline experiences={profile.experience} />

    <Skills skills={profile.skills} publications={profile.publications} />

    <Community community={profile.community} />

    <Projects website={profile.personal_website} />
  </main>

  <Footer
    name={profile.name}
    email={profile.email}
    linkedin={profile.linkedin}
    website={profile.personal_website}
  />
</BaseLayout>
