---
interface Props {
  name: string;
  tagline: string;
  location: string;
  summary: string;
  email: string;
  linkedin: string;
}

const { name, tagline, location, summary, email, linkedin } = Astro.props;
---

<section class="relative min-h-screen flex items-center pt-20">
  <!-- Background effects -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-[500px] h-[500px] bg-[var(--color-accent)] rounded-full blur-[150px] opacity-10 animate-float"></div>
    <div class="absolute bottom-1/4 right-1/4 w-[400px] h-[400px] bg-[var(--color-accent-secondary)] rounded-full blur-[150px] opacity-10 animate-float" style="animation-delay: -3s;"></div>
  </div>

  <div class="container relative z-10">
    <div class="max-w-4xl mx-auto">
      <div class="flex flex-col items-center text-center" data-animate="fade-in-up">
        <!-- Avatar -->
        <div class="w-24 h-24 md:w-32 md:h-32 rounded-full gradient-border overflow-hidden mb-8 animate-glow">
          <img
            src="https://swm.cc/profile.svg"
            alt={name}
            class="w-full h-full object-cover"
          />
        </div>

        <!-- Status badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[var(--color-surface)] border border-[var(--color-border)] mb-6">
          <span class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse-slow"></span>
          <span class="text-sm text-[var(--color-text-muted)]">Available for opportunities</span>
        </div>

        <!-- Name -->
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-heading font-bold mb-4">
          <span class="gradient-text">{name}</span>
        </h1>

        <!-- Tagline -->
        <p class="text-xl md:text-2xl text-[var(--color-text-muted)] mb-4">
          {tagline}
        </p>

        <!-- Location -->
        <div class="flex items-center gap-2 text-[var(--color-text-subtle)] mb-8">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span>{location}</span>
        </div>

        <!-- Summary -->
        <p class="text-lg text-[var(--color-text-muted)] max-w-2xl mb-10 leading-relaxed">
          {summary}
        </p>

        <!-- CTA buttons -->
        <div class="flex flex-wrap justify-center gap-4">
          <a href={`mailto:${email}`} class="btn btn-primary">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Get in touch
          </a>
          <a href={linkedin} target="_blank" rel="noopener noreferrer" class="btn btn-secondary">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
            LinkedIn
          </a>
          <a href="#experience" class="btn btn-secondary">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
            View timeline
          </a>
        </div>
      </div>

      <!-- Scroll indicator -->
      <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-float">
        <div class="w-6 h-10 rounded-full border-2 border-[var(--color-border)] flex justify-center pt-2">
          <div class="w-1 h-2 bg-[var(--color-accent)] rounded-full animate-pulse-slow"></div>
        </div>
      </div>
    </div>
  </div>
</section>
