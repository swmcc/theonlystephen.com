---
import type { Community } from '../utils/profile';

interface Props {
  community: Community[];
}

const { community } = Astro.props;
---

<section id="community" class="section">
  <div class="container">
    <h2 class="section-title" data-animate="fade-in-up">
      <span class="gradient-text">Community</span>
    </h2>

    <!-- Intro blurb -->
    <div class="max-w-3xl mb-10" data-animate="fade-in-up">
      <p class="text-[var(--color-text-muted)] text-lg leading-relaxed">
        I've stepped back from organising meetups to make room for fresh voices and new energy.
        It was a privilege to help build these communities and watch them grow.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-6">
      {community.map((item, index) => (
        <div
          class="group relative overflow-hidden rounded-2xl bg-[var(--color-surface)] border border-[var(--color-border)] p-6 hover:border-[var(--color-accent)] transition-all"
          data-animate="fade-in-up"
          style={`animation-delay: ${index * 0.1}s`}
        >
          <!-- Status indicator -->
          {item.status && (
            <div class="absolute top-4 right-4">
              <span class="inline-flex items-center gap-1.5 px-2 py-1 rounded-full text-xs font-medium bg-[var(--color-text-subtle)]/10 text-[var(--color-text-muted)] border border-[var(--color-border)]">
                {item.status}
              </span>
            </div>
          )}

          <!-- Icon -->
          <div class="w-12 h-12 rounded-xl bg-[var(--color-accent)]/10 flex items-center justify-center mb-4 group-hover:bg-[var(--color-accent)] transition-colors">
            <svg class="w-6 h-6 text-[var(--color-accent)] group-hover:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>

          <!-- Name -->
          <h3 class="text-lg font-heading font-bold text-[var(--color-text)] group-hover:text-[var(--color-accent)] transition-colors mb-1">
            {item.name}
          </h3>

          <!-- Role -->
          <p class="text-[var(--color-accent-secondary)] font-medium text-sm mb-3">
            {item.role}
          </p>

          <!-- Description -->
          <p class="text-[var(--color-text-muted)] text-sm leading-relaxed mb-4">
            {item.description}
          </p>

          <!-- Link -->
          {item.url && (
            <a
              href={item.url}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1.5 text-sm text-[var(--color-accent)] hover:text-[var(--color-accent-hover)] transition-colors"
            >
              <span>View meetup</span>
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
